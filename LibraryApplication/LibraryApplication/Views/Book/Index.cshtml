
@{
    ViewData["Title"] = "Index";
}

<h1>Books Avaliable</h1>

@{
    List<Book> books = ViewData["books"] as List<Book>;
}
<table>


    @foreach(var book in books){
    <tr>
        <td>
            @book.Id
        </td>
        <td>
            @book.Title
        </td>
        <td>
            @book.Author
        </td>

        <td>
                <a href="/Book/UpdateBook/@book.Id" data-method="update" class="update-link">UPDATE</a>
           @* <a asp-controller="Book" asp-action="UpdateBook" asp-route-id="@book.Id">Update Book</a> *@
        </td>
        <td>
               @*<a href="/Book/DeleteBook/@book.Id" data-method="delete" class="delete-link">DELETE</a>*@
           @* <a asp-controller="Book" asp-action="DeleteBook" asp-route-id="@book.Id">Delete Book</a> *@

                <form asp-controller="Book" asp-action="DeleteBook" asp-route-id="@book.Id" method="post">
               <button type="submit">Delete</button>
           </form>
        </td>
    </tr>
    }
</table>





